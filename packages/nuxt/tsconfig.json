{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "module": "preserve",
    "noEmit": true,
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true
  }
}